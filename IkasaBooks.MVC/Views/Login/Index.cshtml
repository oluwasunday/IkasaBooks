@model IkasaBooks.Models.DTOs.LoginRequestDTO
@{
    ViewData["Title"] = "Register";
}
<section>
   
        <div class="row offset-3">
            <div class="col-md-8">

                <div class="card">
                    @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken();
                        <h4 class="text-center">Login</h4>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(c => c.Email, new { @class = "control-label" })

                            @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })

                        </div>





                        <div class="form-group">
                            @Html.LabelFor(c => c.Password, new { @class = "control-label" })

                            @Html.TextBoxFor(c => c.Password, new { @class = "form-control", @type="Password" })

                        </div>


                        <div class="form-group">

                            <input type="submit" value="Login" class="btn btn-success btn-block" />


                        </div>

                        <div>@ViewBag.Message</div>

                    }

                </div>
            </div>
        </div>
   
</section>
