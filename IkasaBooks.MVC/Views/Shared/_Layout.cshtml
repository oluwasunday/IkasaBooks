<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IkasaBooks.MVC</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/elegant-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/nice-select.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>
<body>

    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
           @* <a asp-action="" asp-controller="" asp-area=""><img src="img/logo.png" alt=""></a>*@
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a asp-action="" asp-controller="" asp-area=""><i class="fa fa-heart"></i> <span>1</span></a></li>
                <li><a asp-action="" asp-controller="" asp-area=""><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
            </ul>
            <div class="header__cart__price">item: <span>$150.00</span></div>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="img/language.png" alt="">
                <div>English</div>
                <span class="arrow_carrot-down"></span>

            </div>
            <div class="header__top__right__auth">
                <a asp-action="" asp-controller="" asp-area=""><i class="fa fa-user"></i> Login</a>
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a asp-action="#" asp-controller="" asp-area="">Home</a></li>
                <li><a asp-action="#" asp-controller="" asp-area="">Shop</a></li>
                <li>
                    <a asp-action="" asp-controller="" asp-area="">Pages</a>
                    <ul class="header__menu__dropdown">
                        <li><a asp-action="./shop-details.html">Shop Details</a></li>
                        <li><a asp-action="./shoping-cart.html">Shoping Cart</a></li>
                        <li><a asp-action="./checkout.html">Check Out</a></li>
                        <li><a asp-action="./blog-details.html">Blog Details</a></li>
                    </ul>
                </li>
                <li><a asp-action="./blog.html">Blog</a></li>
                <li><a asp-action="./contact.html">Contact</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a asp-action="#"><i class="fa fa-facebook"></i></a>
            <a asp-action="#"><i class="fa fa-twitter"></i></a>
            <a asp-action="#"><i class="fa fa-linkedin"></i></a>
            <a asp-action="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> info@ikasabooks.com</li>
                <li> --- </li>
            </ul>
        </div>
    </div>





    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <ul>
                                <li><i class="fa fa-envelope"></i>ikasaBooks.com</li>
                                <li>Read and Download Books for free</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__social">
                                <a asp-action="#"><i class="fa fa-facebook"></i></a>
                                <a asp-action="#"><i class="fa fa-twitter"></i></a>
                                <a asp-action="#"><i class="fa fa-linkedin"></i></a>
                                <a asp-action="#"><i class="fa fa-pinterest-p"></i></a>
                            </div>
                            <div class="header__top__right__language">
                                <img src="img/language.png" alt="">
                                <div>English</div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-lg-3">
                    <div class="header__logo">
                        <a asp-action="Index" asp-controller="Home"><img src="img/loggo.jpg" alt=""></a>
                    </div>
                    <!---id="hero" class="d-flex align-items-center"-->
                </div>
                <div class=" col-md-5  col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li><a asp-action="Index" asp-controller="Books">Books</a></li>

                            @if (@ViewBag.Status == "Login")
                            {

                                <li><a asp-action="Index" asp-controller="Register"><i class="fa fa-registered"></i>Register</a></li>
                                <li><a asp-action="Index" asp-controller="Login"><i class="fa fa-user"></i> Login</a></li>
                            }

                            @if (ViewBag.Status == "Logout")
                            {
                                <li><a asp-action="Logoff" asp-controller="Home"><i class="fa fa-user"></i> Logout</a></li>
                            }

                            @if (ViewBag.Role == "Admin")
                            {
                                <li><a asp-action="Index" asp-controller="Admin"><i class="fa fa-user"></i> Admin</a></li>
                            }
                        </ul>
                    </nav>
                </div>
                <div class=" col-md-3  col-lg-3"> 


                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>

   
    <section>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </section>

    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a asp-action="index" asp-controller="Home"><img src="img/loggo.jpg" alt=""></a>
                        </div>
                        <ul>
                            <li>Address: Decagon Institute, Lagos</li>
                            <li>Phone: +234 7063 358 682</li>
                            <li>Email: info@ikasabooks.com</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                    <div class="footer__widget">
                        <h6>About IkasaBooks</h6>
                        <ul>
                            <p>
                                IkasaBooks was founded in 2021 with the aim of providing a huge 
                                library of digital books for free on the Internet. 
                                Many of the first e-books are from the Project Gutenberg archives, 
                                meaning you can find many classic books on the site.
                            </p>
                        </ul>
                        <ul>
                            <p>
                                IkasaBooks has evolved into a platform where self-publishing authors have the opportunity to submit their work to our community, 
                                and new books are uploaded to our site daily, provided they meet our quality standards.
                            </p>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="footer__widget">
                        <h6>Join Our Newsletter Now</h6>
                        <p>Get E-mail updates about our latest books and special offers.</p>
                        <form action="#">
                            <input type="text" placeholder="Enter your mail">
                            <button type="submit" class="site-btn">Subscribe</button>
                        </form>
                        <div class="footer__widget__social">
                            <a asp-action="#"><i class="fa fa-facebook"></i></a>
                            <a asp-action="#"><i class="fa fa-instagram"></i></a>
                            <a asp-action="#"><i class="fa fa-twitter"></i></a>
                            <a asp-action="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer__copyright">
                        <div class="footer__copyright__text">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved <a><i class="fa fa-heart" aria-hidden="true"></i></a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery-3.3.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.nice-select.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slicknav.js"></script>
    <script src="~/lib/jquery/dist/mixitup.min.js"></script>
    <script src="~/lib/jquery/dist/owl.carousel.min.js"></script>
    <script src="~/lib/jquery/dist/main.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
