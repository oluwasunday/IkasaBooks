@model IkasaBooks.MVC.ViewModels.HomeViewModel


@{
    var uniq = new HashSet<string>();

    foreach (var item in Model.Categories)
    {
        uniq.Add(item.CategoryNames);
    }
}


<div class="text-center">

    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Catergories</span>
                        </div>
                        <ul>
                            @*@foreach (var category in Model.Categories)
                            {
                                <li>
                                    <a asp-action="Categories"
                                       asp-controller="Books">@category.CategoryNames</a>
                                </li>

                            }*@

                            @foreach (var category in uniq)
                            {
                                <li>
                                    <a asp-action="Index"
                                       asp-controller="Books" asp-route-categoryname="@category">@category</a>
                                </li>

                            }


                        </ul>
                    </div>
                </div>@*end of 3 column*@

                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form asp-action="#">
                                <div class="hero__search__categories">
                                    All Categories
                                    <span class="arrow_carrot-down"></span>
                                </div>
                                <input type="text" placeholder="Search for a book?">
                                <button type="submit" class="site-btn">SEARCH</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+65 11.188.888</h5>
                                <span>support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero__item set-bg" data-setbg="img/banner2.png">
                        <div class="hero__text">

                        </div>
                    </div>




                </div>
            </div>
        </div>
    </section>


    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>All Books</h2>
                    </div>
                </div>
            </div>




            <div class="row featured__filter">

                @{
                    if (Model.Books != null)
                    {
                        @foreach (var book in Model.Books)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                                <div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg="img/featured/feature-1.jpg">
                                        <img src="@book.ImageURL" alt="@book.Name" />

                                    </div>
                                    <div class="featured__item__text">
                                        <h6>@book.Name</h6>

                                        <a class="btn btn-success btn-block" asp-action="Index" asp-controller="BookDetail" asp-route-id="@book.Id">Details</a>
                                    </div>
                                </div>
                            </div>
                        }


                    }
                    else
                    {
                        @foreach (var book in Model.BooksByCategory)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                                <div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg="img/featured/feature-1.jpg">
                                        <img src="@book.BookImageUrl" alt="@book.BookName" />

                                    </div>
                                    <div class="featured__item__text">
                                        <h6><a asp-action="#">@book.BookName</a></h6>
                                        <a class="btn btn-success btn-block" asp-action="Index" asp-controller="BookDetail" asp-route-id="@book.Id">Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }








            </div>
        </div>
    </section>




</div>
